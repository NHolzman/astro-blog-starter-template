---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE_0, SITE_TITLE_1 } from '../consts';
---

<header>
	<nav>
		<h2 title="Accueil">
			<a title="Accueil" href="/">
				<img id="logo" width="50" height="50" src="/logo.jpg">
			</a>
			<a id="titre0" href="/">{SITE_TITLE_0}</a>
			<a id="titre1" href="/">{SITE_TITLE_1}</a>
		</h2>
		<div class="internal-links">
			<!-- <HeaderLink href="/">Home</HeaderLink> -->
			<!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
			<HeaderLink href="/about">À propos</HeaderLink>
			<HeaderLink href="/projet">Projet actuel</HeaderLink>
		</div>
		<div class="burger-icon">
				<a>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="menu" aria-hidden="true" class="lucide lucide-menu">
						<path d="M4 5h16 M4 12h16 M4 19h16"></path>
					</svg>
				</a>
		</div>
		<div class="burger-nav">
				<ul>
					<li>À propos</li>
					<li>Projet actuel</li>
				</ul>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
		translate: 50px;
	}
	h2:hover {
		text-shadow: 0 0 8px rgba(0, 255, 200, 0.55);
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		white-space: nowrap;
		padding: 1em 0 !important;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: start;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.internal-links {
		margin: 0 auto;
		font-size: 0.85em;
	}
	.burger-icon, .burger-nav {
		display: none;
	}
	#logo {
		min-width: 50px !important;
		min-height: 50px !important;
		position: absolute !important;
  		translate: -100% -30% !important;
		transition: 0.5s;
		transition-property: scale, border-radius, border-color;
		border-style: dotted;
		border-radius: 0;
		border-width: 2px;
		border-color: white;
	}
	h2:hover #logo {
		scale: 1.05;
		border-radius: 50%;
		border-color: #00ff73;
	}
	@media  (max-width: 625px) {
		header {
			padding-left: 0;
			padding-right: 0;
		}
		h2 {
			max-width: min-content;
			padding-bottom: 0 !important;
		}
		#logo {
			translate: -100% -12.5% !important;
		}
	}
	@media  (max-width: 540px) {
		<!--#titre0, #titre1 {
			display: none;
		}-->
		.internal-links {
			display: none !important;
		}
		.burger-icon {
			display: block !important;
		}
		.burger-icon:clicked .burger-nav {
			display: block !important;
		}
		#logo {
			translate: -100% -40% !important;
		}
	}
</style>
