---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE_0, SITE_TITLE_1 } from '../consts';
---

<header>
	<nav>
		<img width="50" height="50" src="/favicon.svg" alt="centrale nucleaire">
		<h2>
			<a id="titre0" href="/">{SITE_TITLE_0}</a>
			<a id="titre1" href="/">{SITE_TITLE_1}</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			{false && <HeaderLink href="/blog">Blog</HeaderLink>}
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/projet">Projet en cours</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		white-space: nowrap;
		padding: 1em 0 !important;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: start;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.internal-links {
		margin: 0 auto;
	}
	@media  (max-width: 550px) {
		h2 {
			max-width: min-content;
		}
	}
</style>
