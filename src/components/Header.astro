---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE_0, SITE_TITLE_1 } from '../consts';
---

<header>
	<nav>
		<img width="50" height="50" src="/favicon.svg" alt="centrale nucleaire">
		<h2>
			<a id="titre0" href="/">{SITE_TITLE_0}</a>
			<b href="/">{SITE_TITLE_1}</b>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			{false && <HeaderLink href="/blog">Blog</HeaderLink>}
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 b
	h2 a.active,
	h2 b.active {
		text-decoration: none;
		white-space: nowrap;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: start;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.internal-links {
		margin: auto 0;
	}
	@media (max-width: 515px) {
		h2 a {
			visibility: hidden;
		}
		h2 a::after {
			visibility: visible;
			white-space: pre-line;
			content: SITE_TITLE_0+"\n";
		}
	}
</style>
