---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<img width="50" height="50" src="favicon.svg" alt="centrale nucleaire">
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			{false && <HeaderLink href="/blog">Blog</HeaderLink>}
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		white-space: nowrap;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: start;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.internal-links,
	.internal-links a {
		padding-left: 25vw;
	}
	@media (max-width: 810px) {
		.internal-links {
			padding-left: 0;
		}
	}
</style>
