---
import Body from '../components/Body.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE_0, SITE_TITLE_1, SITE_DESCRIPTION, SITE_IMAGE } from '../consts';
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE_0+" "+SITE_TITLE_1} description={SITE_DESCRIPTION} image={SITE_IMAGE} />
	</head>
	<Body>
		<Header />
		<main>
			<p>
				Ceci est le site officiel du Comité pro-nucléaire de GG!<br><a href="https://www.cgodin.qc.ca/">(Site de l'école)</a> Merci de visiter notre site web. 
			</p>
		</main>
		<Footer />
	</Body>
</html>
